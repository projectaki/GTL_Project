@model IEnumerable<GTL_Project.Models.Book>

@{
    ViewBag.Title = "BookInfo";
}

<h2>Book Info</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Isbn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.In_Stock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lendable)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Edition)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cover_Type)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Isbn)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.In_Stock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Lendable)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Edition)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cover_Type)
        </td>
        <td>
            |@Html.ActionLink("Available Copies", "BookCopies", "Book", new { id = item.Isbn }, null) |

        </td>
    </tr>
}

</table>
